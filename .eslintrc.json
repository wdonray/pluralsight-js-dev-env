{
  // Tells eslint that this is the root eslint file
  "root": true,
  // Get immediate errors and warnings with these plugins
  "extends": ["plugin:import/errors", "plugin:import/warnings"],
  // Options for eslint parsing
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  // Make eslint version recognizable
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  // Eslint rules to follow
  "rules": {
    "no-await-in-loop": 2,
    "no-const-assign": 2,
    "no-dupe-keys": 2,
    "no-duplicate-imports": 2,
    "no-irregular-whitespace": 1,
    "no-new-symbol": 1,
    "no-unexpected-multiline": 2,
    "no-unreachable": 2,
    "no-unsafe-finally": 1,
    "no-unused-vars": 1,
    "arrow-body-style": ["error", "always"],
    "capitalized-comments": ["error", "always"],
    "curly": ["error", "multi", "consistent"],
    "default-case": 2,
    "max-nested-callbacks": ["error", 3],
    "no-console": 1,
    "no-else-return": 2,
    "no-empty": 1,
    "no-empty-function": 1,
    "no-extra-semi": 1,
    "no-implicit-coercion": 1,
    "no-inline-comments": 2,
    "no-lone-blocks": 2,
    "no-lonely-if": 1,
    "no-magic-numbers": 2,
    "no-multi-str": 1,
    "no-return-await": 2,
    "no-useless-catch": 1,
    "no-useless-return": 1,
    "prefer-const": 2,
    "require-await": 2,
    "sort-imports": 2,
    "spaced-comment": 1,
    "array-bracket-spacing": 1,
    "arrow-parens": 2,
    "arrow-spacing": 2,
    "block-spacing": 2,
    "brace-style": 2,
    "comma-dangle": 2,
    "comma-spacing": 2,
    "eol-last": 2,
    "func-call-spacing": 2,
    "indent": ["error", 2],
    "jsx-quotes": 2,
    "key-spacing": 1,
    "line-comment-position": 2,
    "lines-around-comment": 2,
    "max-len": ["error", { "code": 100 }],
    "no-extra-parens": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-spaces": 2,
    "no-trailing-spaces": 2,
    "quotes": ["error", "single"]
  }
}
